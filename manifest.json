{
  "manifest_version": 3,
  "name": "Market Price DB - ID",
  "description": "Log price from your favorite Indonesian online marketplace",
  "version": "0.0.1",
  "icons": {
    "128": "assets/price-history-128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting",
    "identity",
    "identity.email"
  ],
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.tokopedia.com/*",
        "https://shopee.co.id/*"
      ],
      "js": [
        "assets/js/lightweight-charts.standalone.production.js",
        "src/content/main.js",
        "src/content/inject.js",
        "src/content/scraper.js",
        "src/content/modal.js",
        "src/content/event-listener.js",
        "src/content/user-info.js",
        "src/content/favorite.js"
      ],
      "run_at": "document_end"
    }
  ]
}